{
  "name": "personal-blog",
  "private": true,
  "prisma": {
    "schema": "./packages/database/prisma/schema.prisma"
  },
  "scripts": {
    "postinstall": "cd packages/database && cd prisma && pnpx prisma generate && pnpx prisma db push",
    "build": "turbo",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
